{
  "BlackSlope.Hosts.Api.Configuration": {
    "Swagger": {
      "Version": "1",
      "ApplicationName": "BlackSlope",
      "XmlFile": "BlackSlope.Hosts.Api.xml"
    },
    "AzureAd": {
      "AadInstance": "https://login.microsoftonline.com/{0}",
      "Tenant": "[tenant-id]",
      "Audience": "https://www.blackslope.io"
    },
    "Serilog": {
      "MinimumLevel": "2",
      "FileName": "log.txt",
      "WriteToFile": "false",
      "WriteToAppInsights": "false",
      "WriteToConsole": "true"
    },
    "ApplicationInsights": {
      "InstrumentationKey": "[instrumentation-key]"
    }
  },
  "BlackSlope.Repositories.MovieRepository": {
    "MoviesConnectionString": "data source=.;initial catalog=movies;User Id=sa;Password=sa;MultipleActiveResultSets=True;"
  }
}